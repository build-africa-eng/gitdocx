FROM africanfuture/windows-devbox-base:latest

SHELL ["C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe", "-Command"]

# Create scripts folder
RUN New-Item -Path C:\scripts -ItemType Directory -Force

# Write the PowerShell script to file, ensuring it is one continuous RUN command
RUN Set-Content -Path C:\scripts\check-space-and-write.ps1 -Value `
"Write-Host 'Checking disk space...';" + `
"$fs = (Get-PSDrive C).Free / 1GB;" + `
"Write-Host 'Free space on C: $($fs) GB';" + `
"if ($fs -lt 5) {" + `
"  Write-Error 'Not enough disk space â€” require at least 5 GB';" + `
"  exit 1;" + `
"}" + `
"'Hello from GitDocx Windows' | Out-File -FilePath 'C:\\hello.txt' -Encoding ASCII;" + `
"Write-Host 'Successfully created C:\\hello.txt'"

# Run the script
RUN C:\scripts\check-space-and-write.ps1

# Default shell
CMD ["powershell"]
