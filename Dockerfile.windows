# escape=`
FROM africanfuture/windows-devbox-base:latest

# Use PowerShell explicitly as the default shell for subsequent instructions
SHELL ["powershell", "-Command"]

# Copy the script (use valid Windows path separators)
COPY check-space-and-write.ps1 C:\scripts\check-space-and-write.ps1

# Run the script directly since PowerShell is already the default shell
RUN C:\scripts\check-space-and-write.ps1

# Default command when the container starts
CMD ["powershell"]